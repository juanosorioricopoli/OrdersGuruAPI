    "description": "Coleccion de Postman para Orders API, incluye los endpoints de Auth, Orders, Products y Customers.\n- Ejecuta 'Auth - Login' para poblar tokens de Cognito (usa variables username/password).\n- El resto de peticiones usa Authorization: Bearer {{idToken}}.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "region",
      "value": "us-east-1"
    },
    {
      "key": "baseUrl",
      "value": "https://<restid>.execute-api.us-east-1.amazonaws.com/dev"
    },
    {
      "key": "userPoolClientId",
      "value": "<UserPoolClientId>"
    },
    {
      "key": "username",
      "value": "juan@example.com"
    },
    {
      "key": "password",
      "value": "P@ssw0rd!"
    },
    {
      "key": "idToken",
      "value": ""
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    },
    {
      "key": "orderId",
      "value": ""
    },
    {
      "key": "productId",
      "value": ""
    },
    {
      "key": "customerId",
      "value": ""
    },
    {
      "key": "primaryKey",
      "value": "id"
    },
    {
      "key": "awsAccessKeyId",
      "value": "<YOUR_AWS_ACCESS_KEY_ID>"
    },
    {
      "key": "awsSecretAccessKey",
      "value": "<YOUR_AWS_SECRET_ACCESS_KEY>"
    },
    {
      "key": "awsSessionToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Auth - Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"{{username}}\",\"password\":\"{{password}}\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Obtiene tokens de Cognito usando credenciales de usuario."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "pm.collectionVariables.set('idToken', data.idToken || '');",
                  "pm.collectionVariables.set('accessToken', data.accessToken || '');",
                  "pm.collectionVariables.set('refreshToken', data.refreshToken || pm.collectionVariables.get('refreshToken') || '');",
                  "pm.test('IdToken recibido', function () {",
                  "  pm.expect(data.idToken).to.be.a('string').and.not.empty;",
                  "});"
                ]
              }
            }
          ],
          "response": []
        }
      ]
    },
